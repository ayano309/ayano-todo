<div class="container">
    <ul>
    <% @board.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
    </ul>
    <h1>New Boards</h1>
    <%= form_with(model: @board, url: boards_path, method: 'post', local: true) do |f| %>
    <div>
        <%= f.label :name, 'Name' %>
    </div>
    <div>
        <%= f.text_field :name, class: 'text' %>
    </div>
    <div>
        <%= f.label :description, 'Description' %>
    </div>
    <div>
        <%= f.text_area :description %>
    </div>
    <%= f.submit 'Submit', class: 'btn-primary' %>
    <% end %>
</div>