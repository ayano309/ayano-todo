

.container
  .board_title
    = @board.name
  - @tasks.each do |task|
    = link_to task_path(task) do
      .board
        - if task.eyecatch.attached?
          .board_image
            = image_tag task.eyecatch
        .board_content
          .task_title
            = task.name
            = image_tag 'Combined Shape', class: 'dropbtn'
          = task.description
          .board_detail
            = image_tag task.user.avatar_image

  = link_to new_board_task_path(@board) do
    .board_add.new_btn
      +Add new card
  = link_to root_path do
    .btn-primary
      %p Topに戻る

