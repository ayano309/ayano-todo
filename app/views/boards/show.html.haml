

.container
  .board_title
    = @board.name
  - @tasks.each do |task|
    = link_to task_path(task) do
      .card
        - if task.eyecatch.attached?
          .card_image
            = image_tag task.eyecatch
        .card_content
          .card_title
            = task.name
            = image_tag 'Combined Shape'
          = task.description
          .card_detail
            = image_tag 'default-avatar.png'
            
  = link_to new_board_task_path(@board) do
    .card_add.new_btn
      +Add new card
  = link_to root_path do
    .btn-primary
      %p Topに戻る

