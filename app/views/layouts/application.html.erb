<!DOCTYPE html>
<html>
  <head>
    <title>AyanoTodo</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body>
    <header class="header">
        <p class="header_pageTitle">Boards</p>
        <% if user_signed_in? %>
          <div class="dropdown">
            <%= image_tag 'default-avatar.png', class: 'header_avatar dropbtn' %>
            <div class="dropdown-content">
              <a href="#">プロフィール</a>
              <%= link_to 'logout', destroy_user_session_path,data: { method: 'delete' }  %>
            </div>
        <% else %>
          <%= link_to 'login', new_user_session_path, class: 'header_loginBtn'%>
        <% end %>
          </div>
    </header>
    <% if flash.present? %>
      <div class="flash">
        <% flash.each do |key, value| %>
          <div class="<%= key %>"><%= value %></div>
        <% end %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
